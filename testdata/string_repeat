-- buffer.in.go --
package foo

func do() {
	var s string
	for n := 0; n < getCount(); n++ {
		s += "x"
	}
}

-- buffer.out.go --
package foo

import "strings"

func do() { s := strings.Repeat("x", getCount()) }

